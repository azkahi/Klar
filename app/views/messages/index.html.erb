<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Daftar Pesan</h1>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 col-sm-offset-1">
      <%= link_to "Create new message", new_message_path , {:style=>'color:#FFFFFF;', :class=>'btn btn-warning'} %>
    </div>
  </div>
  <br>
  <% if @message.blank? %>
  <div class="row">
    <div class="col-md-4">
      <h4>Tidak ada pesan untuk Anda.</h4>
    </div>
  </div>
  <% end %>
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @messages.each do |message| %>
    <div class="col-xs-12">
      <div class="text-center">
      <p>Sender: <%= User.find(message.user_id).name %></p>
        <h2><%= message.title %></h2>
        <h6><%= message.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw message.content %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", message_path(message) , {:style=>'color:#222222;', :class=>'btn btn-warning'} %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
